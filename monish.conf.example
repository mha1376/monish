# Example configuration using a local server and default refresh interval.
[defaults]
port=22
user=root
auth=agent
key_path=~/.ssh/id_rsa
ssh_options=-o BatchMode=yes -o ConnectTimeout=5 -o StrictHostKeyChecking=no
refresh_sec=3
concurrency=10
ping_count=1
ping_timeout=1
# Disk usage metrics run `df -h /` on the remote host.
# RAM usage metrics run `free -m` on the remote host.

[server "local"]
host=localhost

