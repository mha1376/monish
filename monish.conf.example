# Example configuration using a local server and default refresh interval.
# RAM usage is automatically gathered via `free -m` on each server.
[defaults]
port=22
user=root
auth=agent
key_path=~/.ssh/id_rsa
ssh_options=-o BatchMode=yes -o ConnectTimeout=5 -o StrictHostKeyChecking=no
refresh_sec=3
concurrency=10
ping_count=1
ping_timeout=1

[server "local"]
host=localhost

